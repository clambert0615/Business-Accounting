@using AccountingProgram.Models

@model AccPayInvExp

<h1 style="text-align:center">Payable Information</h1>
<br />
<h3>Payable Id: @Model.Payable.PayableId</h3>
<br />
<h3>Vendor: @Model.Payable.VendorName</h3>
<br />
<h3>Amount Due: @Model.Payable.AmountDue</h3>
<br />
<h4>Due Date: @Model.Payable.DueDate.ToShortDateString()</h4>

<br />

@foreach (var p in Model.PaymentList)
{
    <h4>Payment Date: @p.PayDate.ToShortDateString()</h4>
    <h4>Payment Amount: @p.Amount</h4>
}

<br />
@if (Model.Payable.Balance != null)
{
<h3>Balance Due: @Model.Payable.Balance</h3>
}
else
{
    <h3>Balance Due: @Model.Payable.AmountDue</h3>
}


<br />
<form action="/AccountsPayable/MakePayment?id=@Model.Payable.PayableId" method="post">
    Make a Payment:
    <input type="number" id="amount" name="amount" step=".01"/>
    <input type="submit" value="Submit Payment" />

</form>
<br />
<button onclick="location.href='/AccountsPayable/UpdatePayable?id=@Model.Payable.PayableId'">Update This Payable</button>
<button onclick="location.href='/AccountsPayable/GetAllPayables'">Return to Accounts Payable Menu</button>
