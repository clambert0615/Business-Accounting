@using AccountingProgram.Models

@model Employee

<h1 style="text-align:center">Update Employee</h1>
<br />
<br />
<form action="/Employees/UpdateEmployee" method="post">
    <input type="hidden" id="EmpId" name="EmpId" value="@Model.EmpId" />
    <label for="FirstName">First Name</label><br />
    <input type="text" id="FirstName" name="FirstName" value="@Model.FirstName"/><br />
    <label for="LastName">Last Name</label><br />
    <input type="text" id="LastName" name="LastName" value="@Model.LastName"/><br />
    <label for="StreetAddress">Street Address</label><br />
    <input type="text" id="StreetAddress" name="StreetAddress" value="@Model.StreetAddress" /><br />
    <label for="City">City</label><br />
    <input type="text" id="City" name="City" value="@Model.City"/><br />
    <label for="State">State</label><br />
    <input type="text" id="State" name="State" value="@Model.State" /><br />
    <label for="Zip">Zip Code</label><br />
    <input type="number" id="Zip" name="Zip" value="@Model.Zip"/><br />
    <label for="Phone">Phone</label><br />
    <input type="text" id="Phone" name="Phone" value="@Model.Phone"/><br />
    <label for="Email">Email</label><br />
    <input type="text" id="Email" name="Email" value="@Model.Email" /><br />
    <label for="Birthdate">Birth Date</label><br />
    <input type="date" id="Birthdate" name="Birthdate" value="@Model.Birthdate.ToString("yyyy-MM-dd")"/><br />
    <label for="Ssn">Social Security Number</label><br />
    <input type="number" id="Ssn" name="Ssn" value="@Model.Ssn"/><br />
    <input type="submit" value="Update Employee" />
</form>