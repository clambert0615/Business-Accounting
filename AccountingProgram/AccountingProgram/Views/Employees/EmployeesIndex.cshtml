@using AccountingProgram.Models

@model List<Employee>

<h1 style="text-align:center">Employee Index</h1>
<br />
<button onclick="location.href='/Employees/AddEmployee'">Add Employee</button>
<br />
<table style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Employee e in Model)
        {
            <tr>
                <td><a href="/Employees/GetEmployee?id=@e.EmpId">@e.EmpId</a></td>
                <td>@e.FirstName</td>
                <td>@e.LastName</td>
            </tr>
        }
    </tbody>
</table>