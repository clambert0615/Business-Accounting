@using AccountingProgram.Models;

@model List<Customers>
<h1 style="text-align:center">Customers Index</h1>
<br />
<button onclick="location.href='/Customer/AddCustomer'">Add New Customer</button>

<table style="width:100%">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Accounts Receivable Balance</th>

        </tr>
    </thead>
    <tbody>
        @{
            
            foreach (Customers c in Model)
            {
                decimal? bal = 0;
                <tr>
                    <td><a href="/Customer/IndividualCustomer?id=@c.CustId">@c.CustId</a> </td>
                    <td>@c.Name</td>
                    <td>@foreach(AccountsReceivable ar in c.AccountsReceivable)
                    {
                        bal += ar.Balance;
                    }
                    @bal
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

