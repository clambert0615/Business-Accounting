@using AccountingProgram.Models

@model List<AccountsReceivable>

<h1 style="text-align:center">Accounts Receivable</h1>
<br />

<table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    
    <thead>
        <tr>
            <th>Id</th>
            <th>Due Date</th>
            <th>Total Amount</th>
            <th>Balance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ar in Model)
        {
            <tr>
                <td><a href="/AccountsReceivable/IndividualReceivable?id=@ar.Id">@ar.Id</a></td>
                <td>@ar.DueDate.ToString("yyyy-MM-dd")</td>
                <td>@ar.Amount</td>
                <td>@ar.Balance</td>
            </tr>
        }
    </tbody>
</table>

