@using AccountingProgram.Models;

@model Vendor

<h1 style="text-align:center">Update Vendor</h1>
<br />
<br />
<h3>Use the form to update the vendor's information:</h3>
<form action="/Vendor/UpdateVendor" method="post">
    <input type="hidden" name="VenID" id="VenId" value="@Model.VenId" />
    <label for="Name">Vendor's Name</label><br />
    <input type="text" id="Name" name="Name" value="@Model.Name" /><br />
    <label for="Address">Street Address</label><br />
    <input type="text" id="Address" name="Address" value="@Model.Address" /><br />
    <label for="City">City</label><br />
    <input type="text" id="City" name="City" value="@Model.City"/><br />
    <label for="State">State</label><br />
    <input type="text" id="State" name="State" value="@Model.State" /><br />
    <label for="Zip">Zip Code</label><br />
    <input type="number" id="Zip" name="Zip" value="@Model.Zip"/><br />
    <label for="Phone">Phone number</label><br />
    <input type="text" id="Phone" name="Phone" value="@Model.Phone"/><br>
    <label for="Email">Email address</label><br />
    <input type="text" id="Email" name="Email" value="@Model.Email"/><br />

    <input type="submit" value="Update Vendor" />
</form>
<br />
<button onclick="location.href='/Vendor/GetAllVendors'">Return to Vendor Index</button>