@using AccountingProgram.Models;

@model Vendor

<h1 style="text-align:center">Add a New Vendor</h1>
<br />
<br />
<h3>Use the following form to add a new vendor:</h3>
<form action="/Vendor/AddNewVendor" method="post">
    <label for="Name">Enter Vendor Name</label><br />
    <input type="text" id="Name" name="Name" /><br />
    <label for="Address">Street Address</label><br />
    <input type="text" id="Address" name="Address" /><br />
    <label for="City">City</label><br />
    <input type="text" id="City" name="City" /><br />
    <label for="State">State</label><br />
    <input type="text" id="State" name="State" /><br />
    <label for="Zip">Zip Code</label><br />
    <input type="number" id="Zip" name="Zip" /><br />
    <label for="Phone">Phone number</label><br />
    <input type="text" id="Phone" name="Phone" /><br>
    <label for="Email">Email address</label><br />
    <input type="text" id="Email" name="Email" /><br />

    <input type="submit" value="Add Vendor" />

</form>
<br />
<button onclick="location.href='/Vendor/VendorIndex'">Return to Vendor Menu</button>