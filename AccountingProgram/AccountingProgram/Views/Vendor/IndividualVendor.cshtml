@using AccountingProgram.Models;

@model Vendor

<h1>@Model.Name      @Model.VenId </h1>
<p>@Model.Address</p>
<p>@Model.City</p>
<p>@Model.State</p>
<p>@Model.Zip</p>
<p>@Model.Phone</p>
<p>@Model.Email</p>
<br />
<button onclick="location.href='/Vendor/UpdateVendor?id=@Model.VenId'">Update Vendor</button>
<br />
<button onclick="location.href='/Vendor/DeleteVendor?id=@Model.VenId'" onsubmit="return confirm('Are you sure you want to delete?');">Delete Vendor</button>
<br />
<button onclick="location.href='/Vendor/VendorIndex'">Return to Vendor Menu</button>